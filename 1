{{- if .Values.metrics.kafka.autoscaling.enabled }}
apiVersion: autoscaling/v2beta1
kind: HorizontalPodAutoscaler
metadata:
  name: {{ include "kafka.metrics.kafka.fullname" . }}
  labels:
    {{- include "common.labels.standard" . | nindent 4 }}
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: {{ include "kafka.metrics.kafka.fullname" . }}
  minReplicas: {{ .Values.metrics.kafka.autoscaling.minReplicas }}
  maxReplicas: {{ .Values.metrics.kafka.autoscaling.maxReplicas }}
  metrics:
    {{- if .Values.metrics.kafka.autoscaling.targetCPUUtilizationPercentage }}
    - type: Resource
      resource:
        name: cpu
        targetAverageUtilization: {{ .Values.metrics.kafka.autoscaling.targetCPUUtilizationPercentage }}
    {{- end }}
    {{- if .Values.metrics.kafka.autoscaling.targetMemoryUtilizationPercentage }}
    - type: Resource
      resource:
        name: memory
        targetAverageUtilization: {{ .Values.metrics.kafka.autoscaling.targetMemoryUtilizationPercentage }}
    {{- end }}
{{- end }}
